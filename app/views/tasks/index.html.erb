<h1>Listing tasks</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= link_to 'Show', task, class: "btn" %></td>
    <td>
      <a class="btn btn-primary" href="<%= edit_task_path(task) %>">
        <i class="icon-edit icon-white"></i>
        Edit
      </a>
    </td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>
<br />
<a href="javascript:void(0)", onclick="setClass('red-text')" class="btn btn-danger">Toggle red text</a>
<a href="javascript:void(0)", onclick="setClass('big-text')" class="btn btn-primary">Toggle big text</a>
<br />

<%= link_to 'New Task', new_task_path %>
